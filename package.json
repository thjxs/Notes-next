{
  "name": "note",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write {components,pages,public,util}/**/*.js pages/*.css",
    "dev": "next",
    "build": "next build",
    "start": "next start"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jshintConfig": {
    "esversion": 9
  },
  "lint-staged": {
    "*.js": [
      "prettier --write --single-quote",
      "eslint --ext"
    ],
    "*.css": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@thjxs/gc-markdown": "0.4.2",
    "autoprefixer": "^10.2.5",
    "next": "^10",
    "postcss": "^8.2.9",
    "prism-react-renderer": "^1.1.0",
    "react": "^17",
    "react-dom": "^17",
    "react-markdown": "^5",
    "react-transition-group": "^4.4.1",
    "tailwindcss": "^2"
  },
  "devDependencies": {
    "eslint": "^7.5.0",
    "eslint-plugin-react": "^7.20.3",
    "husky": "^4",
    "lint-staged": "^10.2.4",
    "prettier": "^2.0.5"
  }
}
